<!-- /templates/snippets/section-introduction.liquid -->

<div class="section-introduction text-center widget space-top-{{ settings.margin-top-section }}">

  <h3 class="widget-title title-lg space-10"><span>{{ settings.introduction_title4 }}</span></h3>
  
  {% capture _image %}introduction_image4.jpg{% endcapture %}
  {% if settings.introduction_image_enable4 %}
    <img src="{{ _image | asset_url }}" alt="">
  {% endif %}

  <div class="widget-content">
    {% if settings.introduction_subtitle4 %}
      <h2>{{ settings.introduction_subtitle4 }}</h2>
    {% endif %}

    {% if settings.introduction_description4 %}
      <p class="description">{{ settings.introduction_description4 }}</p>
    {% endif %}

    {% if settings.introduction_button4 %}
      <a href="{{ settings.introduction_button_url4 }}" class="btn btn-primary">{{ settings.introduction_button4 }}</a>
    {% endif %}
  </div>
</div>

