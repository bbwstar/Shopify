<!-- /templates/snippets/section-latest-products.liquid -->

<div class="section-products widget space-top-{{ settings.margin-top-section }}">
  
  {% assign products_limit = settings.latest_limit %}
  {% assign col = settings.latest_collection %}

  {% if settings.latest_title != blank %}
    <div class="space-25 text-center clearfix">
    <h3 class="widget-title title-md">{{ settings.latest_title }}</h3>
    </div>
  {% endif %}
  <div class="owl-carousel" data-items="{{ settings.latest_col }}" data-carousel="owl" data-smallmedium="2" data-extrasmall="1" data-pagination="false" data-nav="true">
    {% for product in collections[col].products limit: products_limit %}
      {% include 'product-item' %}
    {%else%}
      {% include 'onboarding-empty-collection' %}
    {% endfor %}
  </div>

</div>